<?xml version="1.0" encoding="utf-8"?><manifest xmlns:android="http://schemas.android.com/apk/res/android"
package="com.example.moviesimpleapp">

<uses-permission android:name="android.permission.INTERNET" />

<application

    android:name=".Application"
    android:allowBackup="true"
    android:icon="@drawable/ic_moodra"
    android:label="@string/app_name"
    android:roundIcon="@drawable/ic_moodra"
    android:supportsRtl="true"
    android:theme="@style/Theme.MovieSImpleApp">
    <activity android:name=".view.MainActivity">
        <nav-graph android:value="@navigation/nav_home" />
    </activity>



    <activity android:name="com.example.moviesimpleapp.view.SplashActivity">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>

    </activity>
</application>

</manifest>

